<p id="notice"><%= notice %></p>

<h1>Walks</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Datetime</th>
      <th>Start Address</th>
      <th>Finish Address</th>
      <th>Distance</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @walks.each do |walk| %>
      <tr>
        <td><%= walk.dog.name %></td>
        <td><%= walk.datetime %></td>
        <td><%= walk.start_address %></td>
        <td><%= walk.finish_address %></td>
        <td><%= Geocoder::Calculations.distance_between(walk.start_address, walk.finish_address)%></td>
        <td><%= number_to_currency(Geocoder::Calculations.distance_between(walk.start_address, walk.finish_address) * 3.40)%></td>
        <td><%= link_to 'Show', walk %></td>
        <td><%= link_to 'Edit', edit_walk_path(walk) %></td>
        <td><%= link_to 'Destroy', walk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Walk', new_walk_path %>
