<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= @walk.dog.name %></span>
        <p>
          <strong>Date / Time:</strong>
          <%= @walk.datetime %>
        </p>

        <p>
          <strong>Start Address:</strong>
          <%= @walk.start_address %>
        </p>

        <p>
          <strong>Finish Address:</strong>
          <%= @walk.finish_address %>
        </p>

        <p>
          <strong>Distance:</strong>
          <%= Geocoder::Calculations.distance_between(@walk.start_address, @walk.finish_address)%>
        </p>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_walk_path(@walk) %> |
<%= link_to 'Back', walks_path %>
